.skill {
    position: relative;
    width: 132px;
    height: 132px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right:70px;
}
.skill__text{
    font-size:18px;
    line-height:24px;
    font-weight: bold;
    color:rgba(255, 255, 255, 0.5);
    text-align:center;
}
canvas {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
}

@media(max-width:$bp-desktop){
    .skill{
        margin-right:30px;
    }
}
