.menu__list{
    display:flex;
}
.menu__item{
    margin-right:60px;
    &:last-of-type{
        margin-right:0;
    }
}

.menu__link{
    text-decoration: none;
    color:$white-color;
    &:hover{
        text-decoration: underline;
    }
}
@media(max-width:$bp-desktop){
    .menu__item{
        margin-right:50px;
    }
}
@media(max-width:$bp-tablets){
    .menu--header{
        display:none;
    }
}