.soc {
    display: flex;
    align-items:center;
}

.soc__item{
    margin-right:35px;
    &:last-of-type{
        margin-right:0;
    }
}
.soc__item--footer{
    border:1px solid hsla(0,0%,100%,.3);
    border-radius:50%;
    padding:10px;
}
.soc__link{
    display: flex;
    align-items: center;
    justify-content: center;
}
.soc__svg{
    height:25px;
    fill: rgba(255, 255, 255, 0.3);
    &:hover{
        fill:$white-color;
    }
}

@media (max-width:$bp-tablets) {
    .soc {
        margin-right:120px;
    }
    .soc__svg{
        height:25px;
    }
}
@media (max-width:$bp-phones) {
    .soc--header{
        display:none;
    }
}



