<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio
  body
    .wrapper
      .main
        .container.main__container
          .header
            .logo
              a(class='logo__href',href='#')
                +icon('logo', 'logo__svg')
            .menu
              ul.menu__list 
                each value, key in menu 
                  li.menu__item
                    a(href='#'+key class="menu__link") #{value}
            .soc
                each value, key in soc
                  .soc__item
                    a(href='#'+key class="soc__link")
                     +icon(key, 'soc__svg')
          .main__content
            .main__description #{user['description_site']}
            .main__name #{user['name']}
          .scroll
            .scroll__text 
              a(href='#'+key class="scroll__link") Скролл
              +icon('down', 'scroll__svg')
      .about
        .container.about__container
          .about__item
            .about__image 
              +image('content/user.jpg', 'about__img')
            .data
              .data__line
                .data__name #{lang['city']}
                .data__value #{user['city']}
              .data__line
                .data__name #{lang['age']}
                .data__value #{user['age']}
              .data__line
                .data__name #{lang['birth']}
                .data__value #{user['birth']}
          .about__item
            .about__text #{lang['hello']}
            .about__name #{user['name']}
            .about__text #{user['about']}
            .about__info
              .about__svg 
                +icon('star', 'about__star')
              .about__text #{user['about_site']}
      .skills
        .container.skill__container
          .skills__title #{lang['skills_title']}
          .skills__description #{user['skills_description']}
          .skills__group
            .skills__group-title #{lang['frontend']}
            ul.skills__list
              each value, key in user['skills_frontend'] 
                li.skills__item
                  span.skills__value #{value}
          .skills__group
            .skills__group-title #{lang['workflow']}
            ul.skills__list
              each value, key in user['skills_workflow'] 
                li.skills__item
                  span.skills__value #{value}
      .works
        .container.works__container
          .works__title #{lang['works_title']}
      .talks
        .container.talks__container
          .talks__header
            .talks__title #{lang['talks_title']}
            .arrows
              .arrows__item.arrows__item--left
                +icon('arrow-down', 'arrow__svg')
              .arrows__item.arrows__item--right
                +icon('arrow-down', 'arrow__svg')
          .talks__list 
            each value in review
              .talks__item
                .talks__text #{value['text']}
                  .talks__quote
                    +icon('quote', 'talks__svg')
                .talks__person
                  +image('content/'+value['photo'], 'about__img')
                  .talks__info
                    .talks__name #{value['name']}
                    .talks__work #{value['work']}

      .footer 
        .container.footer__container
          .footer__column 
            .footer__copy © 2020
          .footer__column 
            .footer__author #{user['name']}
            .footer__about #{user['description_site']}
          .footer__column 
            .menu
              ul.menu__list 
                each value, key in menu 
                  li.menu__item
                    a(href='#'+key class="menu__link") #{value}
            .footer__description #{user['footer_description']}
            .soc
              each value, key in soc
                .soc__item.soc__item--footer
                  a(href='#'+key class="soc__link")
                    +icon(key, 'soc__svg')
          .footer__column
            .footer__quote #{lang['quote']}
            .footer__quote-author #{lang['quote_author']}
