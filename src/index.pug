<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title #{lang['title']}
  body
    .wrapper
      .main
        .container.main__container
          .header
            .logo
              a(class='logo__href',href='#')
                +icon('logo', 'logo__svg')
            .menu.menu--header
              ul.menu__list 
                each value, key in menu 
                  li.menu__item
                    a(href='#'+key class="menu__link") #{value}
            .soc.soc--header
                each value, key in soc
                  .soc__item
                    a(href=value class="soc__link" target="_blank")
                     +icon(key, 'soc__svg')
            .hamburger
              +icon('hamburger', 'hamburger__icon')
              +icon('hamburger', 'hamburger__icon')
              +icon('hamburger', 'hamburger__icon')
          .main__content
            .main__description #{user['description_site']}
            h1.main__name #{user['name']}
          .scroll
            .scroll__text 
              a(href='#'+key,class="scroll__link") #{lang['scroll']}
              +icon('down', 'scroll__svg')
      .about#about
        .container.about__container
          .about__item
            .about__image 
              +image('content/user.jpg', 'about__img')
            .data
              .data__line
                .data__name #{lang['city']}
                .data__value #{user['city']}
              .data__line
                .data__name #{lang['age']}
                .data__value #{user['age']}
              .data__line
                .data__name #{lang['birth']}
                .data__value #{user['birth']}
          .about__item
            .about__text #{lang['hello']}
            h2.about__name #{user['name']}
            .about__text #{user['about']}
            .about__info
              .about__svg 
                +icon('star', 'about__star')
              .about__text #{user['about_site']}
      .skills#skills
          #skills__widget
      .works#works
          #works__widget
      .talks#talks
          #reviews__widget
      .footer 
        .container.footer__container
          .footer__column
            .footer__copy ©&nbsp;#{lang['copy']}
            .footer__author 
              .footer__author-name #{user['name']}
              .footer__author-description #{user['description_site']}
          .footer__column
            .menu.footer--menu
              ul.menu__list 
                each value, key in menu 
                  li.menu__item
                    a(href='#'+key class="menu__link") #{value}
            .footer__description #{user['footer_description']}
            .soc.footer--soc
              each value, key in soc
                .soc__item.soc__item--footer
                  a(href=value class="soc__link" target="_blank")
                    +icon(key, 'soc__svg')
            .quote.footer__quote
              .quote__text #{lang['quote']}
              .quote__author #{lang['quote_author']}
    include ./templates/components/skills.pug
    include ./templates/components/reviews.pug
    include ./templates/components/works.pug
