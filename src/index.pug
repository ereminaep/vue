<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title #{lang['title']}
  body
    .wrapper
      .main
        .container.main__container
          .header
            .logo
              a(class='logo__href',href='#')
                +icon('logo', 'logo__svg')
            .menu.menu--header
              ul.menu__list 
                each value, key in menu 
                  li.menu__item
                    a(href='#'+key class="menu__link") #{value}
            .soc.soc--header
                each value, key in soc
                  .soc__item
                    a(href=value class="soc__link" target="_blank")
                     +icon(key, 'soc__svg')
            .hamburger
              +icon('hamburger', 'hamburger__icon')
              +icon('hamburger', 'hamburger__icon')
              +icon('hamburger', 'hamburger__icon')
          .main__content
            .main__description #{user['description_site']}
            h1.main__name #{user['name']}
          .scroll
            .scroll__text 
              a(href='#'+key,class="scroll__link") #{lang['scroll']}
              +icon('down', 'scroll__svg')
      .about#about
        .container.about__container
          .about__item
            .about__image 
              +image('content/user.jpg', 'about__img')
            .data
              .data__line
                .data__name #{lang['city']}
                .data__value #{user['city']}
              .data__line
                .data__name #{lang['age']}
                .data__value #{user['age']}
              .data__line
                .data__name #{lang['birth']}
                .data__value #{user['birth']}
          .about__item
            .about__text #{lang['hello']}
            h2.about__name #{user['name']}
            .about__text #{user['about']}
            .about__info
              .about__svg 
                +icon('star', 'about__star')
              .about__text #{user['about_site']}
      .skills#skills
        .container.skills__container
          h2.title-level2.skills__title {{ title }}
          .skills__description #{user['skills_description']}
          each value, key in user['skills'] 
            .skills__group
              h3.skills__group-title #{value['group']}
              .skills__list
                each items in value['items'] 
                  .skill(data-line=8,data-size="132",data-percent=items['percent'],data-text=items['name'])

      .works#works
        .container.works__container
          h2.title-level2.works__title #{lang['works_title']}
          .works__content
            .slider
              .slider__slide-full 
                +image('content/'+works['images'][0], 'works__img-full')
              .slider__slide-items
                each value in works['images']
                  .slider__slide-item
                    .slider__slide-image
                      +image('content/'+value, 'works__slide-img')
                  .arrows.arrows--work
                    .arrows__item.arrows__item--work.arrows__item--left
                      +icon('arrow-down', 'arrow__svg')
                    .arrows__item.arrows__item--work.arrows__item--right
                      +icon('arrow-down', 'arrow__svg')
              .slider__slide--number 2       
            .works__description
              .tags.works__tags
                each value in tags
                  .tag #{value}
              h3.title-level3.works__name #{works['name']}
              .works__text #{works['description']}
              a(href="#" class="works__link" target="_blank") 
                +icon('link', 'works__svg') 
                span #{lang['work_link']}

      .talks#talks
        .container.talks__container
          .talks__header
            h2.talks__title #{lang['talks_title']}
            .arrows
              .arrows__item.arrows__item--left
                +icon('arrow-down', 'arrow__svg')
              .arrows__item.arrows__item--right
                +icon('arrow-down', 'arrow__svg')
          .reviews 
            each value in review
              .review
                .review__text #{value['text']}
                  .review__quote
                .review__person
                  +image('content/'+value['photo'], 'talks__img')
                  .review__info
                    .review__name #{value['name']}
                    .review__work #{value['work']}

      .footer 
        .container.footer__container
          .footer__column
            .footer__copy ©&nbsp;#{lang['copy']}
            .footer__author 
              .footer__author-name #{user['name']}
              .footer__author-description #{user['description_site']}
          .footer__column
            .menu.footer--menu
              ul.menu__list 
                each value, key in menu 
                  li.menu__item
                    a(href='#'+key class="menu__link") #{value}
            .footer__description #{user['footer_description']}
            .soc.footer--soc
              each value, key in soc
                .soc__item.soc__item--footer
                  a(href=value class="soc__link" target="_blank")
                    +icon(key, 'soc__svg')
            .quote.footer__quote
              .quote__text #{lang['quote']}
              .quote__author #{lang['quote_author']}
